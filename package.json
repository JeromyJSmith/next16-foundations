{
	"name": "live-steam-app",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "concurrently \"turbo dev\" \"npm run dev:agents\"",
		"dev:web": "turbo -F web dev",
		"dev:agents": "cd agents && uv sync && concurrently \"uv run orchestrator.py\" \"uv run component_builder_agent.py\"",
		"dev:orchestrator": "cd agents && uv sync && uv run orchestrator.py",
		"dev:components": "cd agents && uv sync && uv run component_builder_agent.py",
		"dev:all": "concurrently \"npm run dev:web\" \"npm run dev:orchestrator\" \"npm run dev:components\"",
		"agents:setup": "cd agents && uv venv && uv sync",
		"agents:test": "cd agents && uv run pytest",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"db:push": "turbo -F @live-steam-app/db db:push",
		"db:studio": "turbo -F @live-steam-app/db db:studio",
		"db:generate": "turbo -F @live-steam-app/db db:generate",
		"db:migrate": "turbo -F @live-steam-app/db db:migrate"
	},
	"dependencies": {
		"@ai-sdk/openai": "3.0.0-beta.34",
		"@anthropic-ai/sdk": "^0.67.0",
		"@copilotkit/react-ui": "^1.10.6",
		"@copilotkit/runtime": "^1.10.6",
		"@copilotkit/sdk-js": "^1.10.6",
		"@modelcontextprotocol/sdk": "^1.20.2",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/sdk-node": "^0.207.0",
		"@supabase/auth-js": "2.76.2-canary.2",
		"@supabase/realtime-js": "2.76.2-canary.2",
		"@supabase/supabase-js": "2.76.2-canary.2",
		"ai": "6.0.0-beta.72",
		"ast-types": "^0.14.2",
		"commander": "^14.0.2",
		"deepmerge": "^4.3.1",
		"dotenv": "^17.2.2",
		"estree-walker": "^3.0.3",
		"eventemitter3": "^5.0.1",
		"inngest": "^3.44.3",
		"minimatch": "^10.0.3",
		"nanoid": "^5.1.6",
		"pgvector": "^0.2.1",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2",
		"recast": "^0.23.11",
		"supabase": "^2.54.6",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"uuid": "^13.0.0",
		"ws": "^8.18.3",
		"zod": "4.2.0-canary.20251022T022243"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@supabase/functions-js": "2.76.2-canary.2",
		"@types/node": "^24.9.1",
		"concurrently": "^8.2.2",
		"deno-types": "^1.25.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsdown": "^0.15.5",
		"turbo": "^2.5.8"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@10.15.1"
}
