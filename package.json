{
  "name": "live-steam-app",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @live-steam-app/db db:push",
    "db:studio": "turbo -F @live-steam-app/db db:studio",
    "db:generate": "turbo -F @live-steam-app/db db:generate",
    "db:migrate": "turbo -F @live-steam-app/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "^2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsdown": "^0.15.5",
    "@types/node": "^22.13.11"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "packageManager": "pnpm@10.15.1"
}
