{
	"name": "live-steam-app",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @live-steam-app/db db:push",
		"db:studio": "turbo -F @live-steam-app/db db:studio",
		"db:generate": "turbo -F @live-steam-app/db db:generate",
		"db:migrate": "turbo -F @live-steam-app/db db:migrate"
	},
	"dependencies": {
		"@ai-sdk/openai": "^2.0.53",
		"@modelcontextprotocol/sdk": "^1.20.2",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/sdk-node": "^0.207.0",
		"ai": "^5.0.79",
		"dotenv": "^17.2.2",
		"eventemitter3": "^5.0.1",
		"inngest": "^3.44.3",
		"nanoid": "^5.1.6",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"uuid": "^13.0.0",
		"ws": "^8.18.3",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@types/node": "^24.9.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsdown": "^0.15.5",
		"turbo": "^2.5.8"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@10.15.1"
}
