# ============================================================================
# LIVE STEAM APP - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your configuration values
# DO NOT commit .env to version control

# ============================================================================
# ORCHESTRATOR AGENT (ADK + Gemini)
# ============================================================================
ORCHESTRATOR_URL=http://localhost:9000
ORCHESTRATOR_PORT=9000

# ============================================================================
# COMPONENT BUILDER AGENT (LangGraph + OpenAI)
# ============================================================================
COMPONENT_BUILDER_URL=http://localhost:9001
COMPONENT_BUILDER_PORT=9001

# ============================================================================
# SPECIALIZED AGENTS
# ============================================================================
ITINERARY_AGENT_URL=http://localhost:9002
ITINERARY_PORT=9002

# ============================================================================
# LLM API KEYS (REQUIRED FOR AGENTS TO WORK)
# ============================================================================

# Google API Key (for Gemini - Orchestrator Agent)
# Get from: https://aistudio.google.com/app/apikey
# Required for: orchestrator.py
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (for GPT-4 - Component Builder & Itinerary Agents)
# Get from: https://platform.openai.com/api-keys
# Required for: component_builder_agent.py, itinerary_agent.py
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# SUPABASE CONFIGURATION (OPTIONAL - FOR DATABASE/REALTIME)
# ============================================================================
# Set these if you want to use Supabase features
# Get from: https://app.supabase.com/projects

# Supabase project URL
SUPABASE_URL=your_supabase_url

# Supabase public anon key
SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================================================
# AGENT BEHAVIOR CONFIGURATION
# ============================================================================

# Enable verbose debugging
# Use: DEBUG=true to see detailed logs
DEBUG=false

# Session timeout for agents (in seconds)
SESSION_TIMEOUT_SECONDS=3600

# Use in-memory storage for agents (development only)
# Set to false to use persistent storage
USE_IN_MEMORY_STORAGE=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Environment: development, staging, production
NODE_ENV=development

# Show CopilotKit dev console in browser
SHOW_DEV_CONSOLE=true
